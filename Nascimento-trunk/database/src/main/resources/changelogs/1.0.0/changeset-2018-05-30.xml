<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet author="sbogas"
		id="2018-05-30-add-username-email_message">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="email_message" columnName="username" />
			</not>
		</preConditions>
		<addColumn tableName="email_message">
			<column name="username" type="varchar(75)" />
		</addColumn>
	</changeSet>
	
	
	<changeSet author="sbogas"
		id="2018-05-30-add-display_name-email_message">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="email_message" columnName="display_name" />
			</not>
		</preConditions>
		<addColumn tableName="email_message">
			<column name="display_name" type="varchar(75)" />
		</addColumn>
	</changeSet>
	
</databaseChangeLog>