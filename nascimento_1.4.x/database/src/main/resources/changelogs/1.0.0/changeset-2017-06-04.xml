<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet author="pzenida" id="2017-06-04-add-dummy-mode-configuration">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="configuration" columnName="dummy_mode" />
			</not>
		</preConditions>
		<addColumn tableName="configuration">
			<column name="dummy_mode" type="tinyint(1)" defaultValue="0" />
		</addColumn>
	</changeSet>

	<changeSet author="pzenida" id="2017-06-04-add-ticket">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="ticket" />
			</not>
		</preConditions>
		<createTable tableName="ticket">
			<column name="id" type="BIGINT">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="creation_date" type="datetime(6)" />
			<column name="uuid" type="varchar(75)" />
			<column name="token" type="VARCHAR(75)" />
			<column name="username" type="VARCHAR(75)" />
			<column name="status" type="VARCHAR(20)" />
			<column name="type" type="VARCHAR(50)" />
			<column name="expiration_date" type="datetime(6)" />
		</createTable>
	</changeSet>

</databaseChangeLog>