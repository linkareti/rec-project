<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet author="pzenida" id="2017-06-01-create-user">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="user" />
			</not>
		</preConditions>
		<createTable tableName="user">
			<column name="id" type="BIGINT">
				<constraints nullable="false" />
			</column>
			<column name="creation_date" type="datetime(6)" />
			<column name="uuid" type="VARCHAR(75)" />
			<column name="username" type="VARCHAR(75)">
				<constraints nullable="false" />
			</column>
			<column name="password" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="display_name" type="VARCHAR(75)">
				<constraints nullable="false" />
			</column>
			<column name="email" type="VARCHAR(150)">
				<constraints nullable="false" />
			</column>
			<column name="role_type" type="VARCHAR(50)">
				<constraints nullable="false" />
			</column>
			<column name="key_organization" type="bigint(20)" />
		</createTable>
	</changeSet>

	<changeSet author="pzenida" id="2017-06-01-add-fk-organization-on-user">
		<preConditions onFail="MARK_RAN">
			<not>
				<foreignKeyConstraintExists
					foreignKeyName="fk_organization_on_user" foreignKeyTableName="user" />
			</not>
		</preConditions>
		<addForeignKeyConstraint constraintName="fk_organization_on_user"
			referencedTableName="organization" baseColumnNames="key_organization"
			baseTableName="user" referencedColumnNames="id" />
	</changeSet>

	<changeSet author="pzenida" id="2017-06-02-insert-admin-user">
		<preConditions onFail="MARK_RAN">
			<sqlCheck expectedResult="0">
                                <![CDATA[
select count(*) from user where username = 'admin'
                                ]]>
			</sqlCheck>
		</preConditions>
		<insert tableName="table_hilo_generator">
			<column name="table_name" value="user" />
			<column name="next_val" value="101" />
		</insert>
		<insert tableName="user">
			<column name="id" value="1" />
			<column name="creation_date" valueComputed="CURRENT_TIMESTAMP()" />
			<column name="username" value="admin" />
			<column name="password" valueComputed="MD5('admin')" />
			<column name="email" value="pzenida@linkare.com" />
			<column name="display_name" value="Administrator" />
			<column name="role_type" value="ADMIN" />
		</insert>
		<rollback>
			<sql>
				<![CDATA[
delete from table_hilo_generator where table_name = 'user' and next_val = '101'
				]]>
			</sql>
			<sql>
				<![CDATA[
delete from user where username = 'admin'
                ]]>
			</sql>
		</rollback>
	</changeSet>

	<changeSet author="pzenida" id="2017-06-02-fix-admin-user-uuid">
		<update tableName="user">
			<column name="uuid" valueComputed="UUID()" />
			<where>username = 'admin'</where>
		</update>
	</changeSet>

</databaseChangeLog>