<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet author="pzenida" id="2017-05-25-add-configuration-column-1">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="configuration" columnName="date_pattern" />
			</not>
		</preConditions>
		<addColumn tableName="configuration">
			<column name="date_pattern" type="varchar(30)" defaultValue="yyyy-MM-dd"
				afterColumn="uuid" />
		</addColumn>
	</changeSet>

	<changeSet author="pzenida" id="2017-05-25-add-configuration-column-2">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="configuration" columnName="date_mask" />
			</not>
		</preConditions>
		<addColumn tableName="configuration">
			<column name="date_mask" type="varchar(30)" defaultValue="9999-99-99"
				afterColumn="date_pattern" />
		</addColumn>
	</changeSet>

	<changeSet author="pzenida" id="2017-05-25-add-configuration-column-3">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="configuration" columnName="date_time_mask" />
			</not>
		</preConditions>
		<addColumn tableName="configuration">
			<column name="date_time_mask" type="varchar(30)" defaultValue="9999-99-99 99:99"
				afterColumn="date_time_pattern" />
		</addColumn>
	</changeSet>

	<changeSet author="pzenida" id="2017-05-25-add-configuration-column-4">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="configuration" columnName="time_mask" />
			</not>
		</preConditions>
		<addColumn tableName="configuration">
			<column name="time_mask" type="varchar(30)" defaultValue="99:99"
				afterColumn="time_pattern" />
		</addColumn>
	</changeSet>

</databaseChangeLog>