<?xml version="1.0" encoding="UTF-8"?>
<jnlp codebase="@codebase@" href="windowsInstaller.jnlp" spec="1.0+">
    <information>
        <title>eLab</title>
        <vendor>Linkare TI</vendor>
        <homepage href="http://elab.ist.utl.pt/rec/"/>
        <description>Laboratório de experiências online.</description>
        <description kind="short">eLab</description>
        <offline-allowed/>
    </information>
    <security>
        <all-permissions/>
    </security>
    <resources>
        <j2se version="1.6+"/>
        <jar download="eager" href="ReCClient_sig.jar" main="true"/>
    </resources>

    <!-- obter as libs para as várias archs se necessário -->
    <resources arch="x86" os="Windows">
        <jar download="lazy" href="lib/vlcplugins_win32_x86_sig.jar"/>
        <jar download="lazy" href="lib/codecs_win32_sig.jar"/>
    </resources>

    <resources arch="x86_64" os="Windows">
        <jar download="lazy" href="lib/vlcplugins_win32_x86_sig.jar"/>
        <jar download="lazy" href="lib/codecs_win32_sig.jar"/>
    </resources>

    <resources arch="amd" os="Windows">
        <jar download="lazy" href="lib/vlcplugins_win32_x86_sig.jar"/>
        <jar download="lazy" href="lib/codecs_win32_sig.jar"/>
    </resources>

    <resources arch="amd64" os="Windows">
        <jar download="lazy" href="lib/vlcplugins_win32_x86_sig.jar"/>
        <jar download="lazy" href="lib/codecs_win32_sig.jar"/>
    </resources>
    
    <installer-desc main-class="com.linkare.rec.impl.newface.installer.windows.WindowsInstaller"/>
</jnlp>
