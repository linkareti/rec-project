<?xml version="1.0" encoding="UTF-8"?>
<jnlp codebase="@codebase@" href="LinuxInstaller.jnlp" spec="1.0+">
    <information>
        <title>@title@</title>
        <vendor>Linkare TI</vendor>
        <homepage href="http://elab.ist.utl.pt/rec/"/>
        <description>Linux Installer.</description>
        <description kind="short">Linux Installer</description>
        <offline-allowed/>
    </information>
    <security>
        <all-permissions/>
    </security>
    <resources>
        <j2se version="1.6+"/>
        <jar download="eager" href="ReCClient_sig.jar" main="true"/>
    </resources>

    <!-- hopefully funciona para todas as archs e windows -->
    <resources arch="i386" os="Linux">
        <jar download="lazy" href="lib/vlcplugins_linux_i686_sig.jar"/>
    </resources>

    <resources arch="i586" os="Linux">
        <jar download="lazy" href="lib/vlcplugins_linux_i686_sig.jar"/>
    </resources>

    <resources arch="i686" os="Linux">
        <jar download="lazy" href="lib/vlcplugins_linux_i686_sig.jar"/>
    </resources>

    <resources arch="amd64" os="Linux">
        <jar download="lazy" href="lib/vlcplugins_linux_amd64_sig.jar"/>
    </resources>

    <installer-desc main-class="com.linkare.rec.impl.newface.installer.linux.LinuxInstaller"/>
</jnlp>
