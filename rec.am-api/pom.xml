<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.linkare</groupId>
	<artifactId>rec.am-api</artifactId>
	<name>rec.am-api</name>
	<version>0.0.1-SNAPSHOT</version>

	<repositories>
		<repository>
			<id>public-repo</id>
			<name>Linkare public repository</name>
			<url>http://nexus.linkare.com/content/repositories/releases/</url>
		</repository>
		<repository>
			<id>snap-repo</id>
			<name>Linkare public snapshot repository</name>
			<url>http://nexus.linkare.com/content/repositories/snapshots/</url>
		</repository>
	</repositories>

	<organization>
		<name>Linkare TI</name>
		<url>http://www.linkare.com</url>
	</organization>
	<build>
		<plugins>
			<!-- Compiler plugin enforces Java 1.6 compatiblity -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>