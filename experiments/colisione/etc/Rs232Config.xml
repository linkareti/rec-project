<?xml version="1.0" encoding="iso-8859-1" ?>
<hardware id="ELAB_COLISIONE_DSPIC_V1.0" num_channels="3"
	minfrequency="0.1Hz" maxfrequency="1000Hz">
	<rs232 baud="115200" stopbits="1" paritybits="0" numbits="8"
		ports_restrict="/dev/ttyS0">
		<parameters>
			<!-- poder_acel1 -->
			<parameter output="##0" input="##0" maxvalue="100" minvalue="0"
				order="0">
			</parameter>
			<!-- poder_acel2 -->
			<parameter output="##0" input="##0" maxvalue="100"
				minvalue="0" order="1">
			</parameter>
			<!-- cam_segue -->
			<parameter output="0" input="0" maxvalue="3"
				minvalue="0" order="2">
			</parameter>
		</parameters>
		<channels>
			<!-- Tempo -->
			<channel format="#####" order="0">
				<transfer_function>
					<linear>
						<param weight="0.01" center="0"/>
					</linear>
				</transfer_function>
			</channel>
			<!-- Delta Tempo carrinho1 -->
			<channel format="#####" order="1">
				<transfer_function>
					<linear>
						<param weight="0.01" center="0"/>
					</linear>
				</transfer_function>
			</channel>
                        <!-- Delta Tempo carrinho2 -->
			<channel format="#####" order="2">
				<transfer_function>
					<linear>
						<param weight="0.01" center="0"/>
					</linear>
				</transfer_function>
			</channel>
		</channels>
		<timeout>
			<default_timeout time="45000" />
			<id time="10000" />
			<cfg time="80000" />
			<cur time="5000" />
			<str time="30000" />
			<dat_bin time="120000" />
			<no_data time="60000" />
			<end time="230000" />
			<stp time="180000" />
			<rst time="180000" />
			<hardware_died time="3600000" />
			<listen_to_port time="10000" />
		</timeout>
		<errors>
			<error code="0" key="OPS" message="Something wrong happened !" />
			<error code="1" key="SENSOR" message="Sensor has failed." />
			<error code="2" key="OUT" message="Value out of range..." />
		</errors>
	</rs232>
</hardware>
