<?xml version="1.0" encoding="iso-8859-1" ?>
<hardware id="ELAB_LANGMUIR_PROBE_DSPIC_V0.1" num_channels="3" minfrequency="10Hz" maxfrequency="1000Hz">
	<rs232 baud="115200" stopbits="1" paritybits="0" numbits="8" ports_restrict="/dev/ttyUSB0">
		<parameters>
			<!-- protocolo -->
			<!--parameter output="0" input="0" maxvalue="5" minvalue="1" order="0">
			Aqui fica este parametro caso algum dia se queiram adicionar mais protocolos			
			</parameter-->


			<!-- max_duty -->
			<parameter output="##0" input="##0" maxvalue="500" minvalue="50" order="0">
				<transfer_function type="output">
					<linear><param weight="6.429" center="14.286"/></linear>
				</transfer_function>
				<transfer_function type="input">
					<linear><param weight="6.429" center="14.286"/></linear>
				</transfer_function>
			</parameter>
			<!-- t_sinal -->
			<parameter output="###0" input="###0" maxvalue="3000" minvalue="400" order="1">
				<transfer_function type="output">
					<linear><param weight="50" center="0"></param></linear>
				</transfer_function>
				<transfer_function type="input">
					<linear><param weight="50" center="0"></param></linear>
				</transfer_function>
			</parameter>
			<!-- n_samp -->
			<parameter output="##0" input="##0" maxvalue="47" minvalue="2" order="2">
			</parameter>
			<!-- n_period -->
			<parameter output="##0" input="##0" maxvalue="50" minvalue="5" order="3">
			</parameter>
			<!-- setpoint_press -->
			<parameter output="###0" input="###0" maxvalue="5000" minvalue="100" order="4">
				<transfer_function type="output">
					<linear><param weight="100" center="0"></param></linear>
				</transfer_function>
				<transfer_function type="input">
					<linear><param weight="100" center="0"></param></linear>
				</transfer_function>
			</parameter>

			<!-- pump_press -->
			<parameter output="###0" input="###0" maxvalue="5000" minvalue="100" order="5">
				<transfer_function type="output">
					<linear><param weight="100" center="0"></param></linear>
				</transfer_function>
				<transfer_function type="input">
					<linear><param weight="100" center="0"></param></linear>
				</transfer_function>
			</parameter>

			<!-- gas_sel -->
			<parameter output="#0" input="#0" maxvalue="3" minvalue="1" order="6">
			</parameter>
			
		</parameters>
		<channels>
			<!-- adc_value1 -->
			<channel format="###" order="0">
				<transfer_function>
					<linear><param weight="0.0048828125" center="0"/></linear>
				</transfer_function>
			</channel>
			<!-- adc_value2 -->
			<channel format="###" order="1">
				<transfer_function>
					<linear><param weight="0.0048828125" center="0"/></linear>
				</transfer_function>
			</channel>
			<!-- pressure gauge value -->
			<channel format="####" order="2">
			</channel>
		</channels>
		<timeout>
			<default_timeout time="45000" />
			<id time="10000" />
			<cfg time="80000" />
			<cur time="5000" />
			<str time="5000" />
			<dat_bin time="120000" />
			<no_data time="60000" />
			<end time="230000" />
			<stp time="180000" />
			<rst time="180000" />
			<hardware_died time="3600000" />
			<listen_to_port time="10000" />
		</timeout>
		<errors>
			<error code="0" key="OPS" message="Something wrong happened !" />
			<error code="1" key="SENSOR" message="Sensor has failed." />
			<error code="2" key="OUT" message="Value out of range..." />
		</errors>
	</rs232>
</hardware>
