			<value order="1">1264</value>
			<value order="2">1480</value>
			<value order="3">1</value>
		</selection-list>
	</parameter>
	<parameter name="frequency.start" type="ContinuousValue"
		value="250">
		<selection-list>
			<value order="1">100</value>
			<value order="2">2000</value>
			<value order="3">1</value>
		</selection-list>
	</parameter>
	<parameter name="frequency.end" type="ContinuousValue" value="250">
		<selection-list>
			<value order="1">100</value>
			<value order="2">2000</value>
			<value order="3">1</value>
		</selection-list>
	</parameter>
	<parameter name="wave.form" type="SelectionListValue" value="SIN">
		<selection-list>
			<value order="1">SIN</value>
