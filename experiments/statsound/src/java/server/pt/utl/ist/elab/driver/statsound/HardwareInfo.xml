	<frequency-scale label="Sampling Frequency Range Position">
		<min-frequency><Frequency type="SamplingIntervalType" multiplier="none">1</Frequency></min-frequency>
		<max-frequency><Frequency type="SamplingIntervalType" multiplier="none">1</Frequency></max-frequency>
		<step-frequency><Frequency type="SamplingIntervalType" multiplier="none">1</Frequency>	</step-frequency>
	</frequency-scale>
	<Frequency type="FrequencyType" multiplier="none">11025</Frequency>
	<sampling-scale>
		<min-samples>1</min-samples>
		<max-samples>5000</max-samples>
		<step-samples>1</step-samples>
	</sampling-scale>
	<!-- position -->
	<ChannelInfo name="statsound$rec.exp.statsound.hardwareinfo.channel.0.name" independent="false" direction="CHANNEL_INPUT">
