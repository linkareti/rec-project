		value="Vary Piston">
		<selection-list>
			<value order="1">Vary Piston</value>
			<value order="2">Vary Freq</value>
			<value order="3">Sound Vel</value>
		</selection-list>
	</parameter>
	<!-- 
		The status refers to the chosen microphones. The possible values present if each micro in each position is 
		active or inactive, as follows, from left to right, ending with the flag to control if the heating is on/off
		-> Microphone 2: 0 or 1 to state if it is selected or not
		-> Microphone 3: 0 or 1 to state if it is selected or not
		-> Microphone 4: 0 or 1 to state if it is selected or not
		-> Heating on? : 0 or 1 to state if it is on or off
	 -->
	<parameter name="status" type="SelectionListValue" value="0000">
		<selection-list>
			<value order="1">0000</value>
			<value order="2">0001</value>
			<value order="3">0010</value>
			<value order="4">0011</value>
			<value order="5">0100</value>
			<value order="6">0101</value>
			<value order="7">0110</value>
			<value order="8">0111</value>
			<value order="9">1000</value>
		</selection-list>
	</parameter>
	<parameter name="calibration" type="OnOffValue"
		value="1">
		<selection-list>
			<value order="1">1</value>
			<value order="2">0</value>
		</selection-list>
	</parameter>
	<frequency-scale label="Sampling Frequency Wave Form">
		<min-frequency><Frequency type="FrequencyType" multiplier="none">11025</Frequency></min-frequency>
		<max-frequency><Frequency type="FrequencyType" multiplier="none">11025</Frequency></max-frequency>
		<step-frequency><Frequency type="FrequencyType" multiplier="none">1</Frequency>	</step-frequency>
	</frequency-scale>
