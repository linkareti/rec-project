<?xml version="1.0" encoding="iso-8859-1" ?>
<hardware id="ELAB_OPTICA_STAMP_V02" num_channels="2" minfrequency="10Hz" maxfrequency="1000Hz">
  <rs232 baud="38400" stopbits="2" paritybits="0" numbits="8" ports_restrict="/dev/ttyS0,/dev/ttyS1">
	<parameters>
	    <parameter output="####" input="####.##" maxvalue="100" minvalue="1" order="1">
		  <transfer_function type="output">
		      <linear>
			  <param weight="1" center="2" />
		      </linear>
		      <power>
			  <param weight="0.5" center="3" power="2" />
			  <!-- param weight="0.25" center="2" power="2" / -->
		      </power>
		      <exponential>
			  <param weight="1" center="0" coeficient="1" />
		      </exponential>
		      <logarithm>
			  <param weight="2" center="10" coeficient="100" />
		      </logarithm>
		      <sin>
			  <param weight="50" coeficient="1" delta="3.1416" />
		      </sin>
		      <tg>
			  <param weight="1" coeficient="3" delta="0" />
		      </tg>
		  </transfer_function>
		  <transfer_function type="input">
		      <linear>
			  <param weight="1" center="1" />
		      </linear>
		  </transfer_function>
	    </parameter>
	</parameters>
	<channels>
	    <channel format="###" order="0">
		<transfer_function>
		      <linear>
			  <param weight="2" center="1" />
		      </linear>
		</transfer_function>
	    </channel>
	    <channel format="###" order="1">
		<transfer_function>
		      <power>
			  <param weight="3" center="1" power="2" />
		      </power>
		</transfer_function>
	    </channel>
	    <channel format="###" order="2">
		<transfer_function>
		      <exponential>
			  <param weight="1" center="0" coeficient="1" />
		      </exponential>
		</transfer_function>
	    </channel>
	    <channel format="###" order="3">
		<transfer_function>
		      <logarithm>
			  <param weight="2" center="10" coeficient="100" />
		      </logarithm>
		</transfer_function>
	    </channel>
	    <channel format="###" order="4">
		<transfer_function>
		      <sin>
			  <param weight="100" coeficient="2" delta="3.1416" />
		      </sin>
		</transfer_function>
	    </channel>
	    <channel format="###" order="5">
		<transfer_function>
		      <tg>
			  <param weight="1" coeficient="3" delta="0" />
		      </tg>
		</transfer_function>
	    </channel>
	    <channel format="###" order="6">
	    </channel>
	</channels>
	<timeout>
	    <default_timeout time="45" />
	    <id time="10" />
	    <cfg time="5" />
	    <cur time="5" />
	    <str time="45" />
	    <dat_bin time="12" />
	    <dat_no_data time="120" />
	    <bin_no_data time="120" />
	    <stp time="20" />
	    <rst time="20" />
	    <hardware_died time="3600" />
	    <listen_to_port time="10000" />
	</timeout>
	<errors>
	    <error code="0" key="OPS" message="Something wrong happened !" />
	    <error code="1" key="SENSOR" message="Sensor has failed." />
	    <error code="2" key="OUT" message="Value out of range..." />
	</errors>
  </rs232>
</hardware>