<?xml version="1.0" encoding="iso-8859-1" ?>
<hardware id="OPTICA" num_channels="2" minfrequency="10Hz"
	maxfrequency="1000Hz">
	<rs232 baud="115200" stopbits="1" paritybits="0" numbits="8"
		ports_restrict="/dev/ttyS0,/dev/ttyS1">

		<!--
			In optica experiment the parameters and channel values are fisics
			values so they don't have transfer functions
		-->

		<parameters>

			<!-- Protocolo -->
			<parameter output="0" input="0" maxvalue="5" minvalue="1"
				order="0" />

			<!-- Ângulo mínimo -->
			<parameter output="#0.0" input="#0.0" maxvalue="360"
				minvalue="0" order="1" />

			<!-- Ângulo máximo -->
			<parameter output="#0.0" input="#0.0" maxvalue="360"
				minvalue="0" order="2" />

			<!-- Incremento -->
			<parameter output="#0.0" input="#0.0" maxvalue="360"
				minvalue="0.2" order="3" />

			<!-- Delay -->
			<parameter output="#0" input="#0" maxvalue="5" minvalue="0.1"
				order="4" />

		</parameters>

		<channels>

			<!-- Ângulo actual do pexiglass -->
			<channel format="#0.0" order="0" />

		</channels>

		<timeout>
			<default_timeout time="45" />
			<id time="10" />
			<cfg time="5" />
			<cur time="5" />
			<str time="45" />
			<dat_bin time="12" />
			<dat_no_data time="120" />
			<bin_no_data time="120" />
			<stp time="20" />
			<rst time="20" />
			<hardware_died time="3600" />
			<listen_to_port time="10000" />
		</timeout>

		<errors>
			<error code="1" key="1"
				message="Este erro é possível que aconteça e nesse caso solicita-se uma nova calibração do pexiglass até um máximo 3 calibrações. Caso ainda não tenha ficado calibrado, tentar uma última vez calibrando primeiro o sensor e somente depois o pexiglass." />
			<error code="2" key="2"
				message="Este erro é pouco provável que aconteça, mas se acontecer deve ser abortado o controlo da experiência e pô-la em baixo, pois deve necessitar de manutenção (ida ao laboratório)." />
			<error code="3" key="3"
				message="Este erro é pouco provável que aconteça, pois dependerá somente dos dados enviados pelo java e caso estes estejam nos limites não será enviado nenhum erro." />
		</errors>

	</rs232>
</hardware>