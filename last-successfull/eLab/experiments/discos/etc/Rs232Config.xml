<?xml version="1.0" encoding="iso-8859-1" ?>
<hardware id="ELAB_DISCOS_DSPIC_V1.0" num_channels="3"
	minfrequency="10Hz" maxfrequency="1000Hz">
	<rs232 baud="115200" stopbits="1" paritybits="0" numbits="8"
		ports_restrict="/dev/ttyUSB0">
		<parameters>
			<!-- protocolo -->
			<parameter output="0" input="0" maxvalue="2" minvalue="1"
				order="0">
			</parameter>
			<!-- servo_vel -->
			<parameter output="#000" input="#000" maxvalue="1500"
				minvalue="300" order="1">
			</parameter>
			<!-- relay_vel -->
			<parameter output="#000" input="#000" maxvalue="1500"
				minvalue="300" order="2">
			</parameter>
			<!-- max_vel -->
			<parameter output="#000" input="#000" maxvalue="1500"
				minvalue="300" order="3">
			</parameter>
		</parameters>
		<channels>
			<!-- tempo -->
			<channel format="00000000" order="0">
				<transfer_function>
					<linear>
						<param weight="0.000001" center="0"/>
					</linear>
				</transfer_function>
			</channel>
			<!-- rpm -->
			<channel format="#000" order="1">
			</channel>
			<!-- tensao -->
			<channel format="#000" order="2">
				<transfer_function>
					<linear>
						<param weight="0.001" center="0"/>
					</linear>
				</transfer_function>
			</channel>
		</channels>
		<timeout>
			<default_timeout time="45000" />
			<id time="10000" />
			<cfg time="80000" />
			<cur time="5000" />
			<str time="30000" />
			<dat_bin time="120000" />
			<no_data time="60000" />
			<end time="230000" />
			<stp time="180000" />
			<rst time="180000" />
			<hardware_died time="3600000" />
			<listen_to_port time="10000" />
		</timeout>
		<errors>
			<error code="0" key="OPS" message="Something wrong happened !" />
			<error code="1" key="SENSOR" message="Sensor has failed." />
			<error code="2" key="OUT" message="Value out of range..." />
		</errors>
	</rs232>
</hardware>
