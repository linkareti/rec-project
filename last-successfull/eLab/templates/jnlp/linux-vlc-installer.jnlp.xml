<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jnlp PUBLIC "-//Sun Microsystems, Inc//DTD JNLP Descriptor 6.0//EN" "http://java.sun.com/dtd/JNLP-6.0.dtd">
<jnlp codebase="@codebase@" href="linux-vlc-installer.jnlp" spec="6.0+">
	<information>
		<title>@linux.vlc.intaller.title@</title>
		<vendor>@linux.vlc.intaller.vendor@</vendor>
		<homepage href="@linux.intaller.homepage@" />
		<description>@linux.vlc.intaller.description@</description>
		<description kind="one-line">@linux.vlc.intaller.description.oneline@
		</description>
		<description kind="tooltip">@linux.vlc.intaller.description.tooltip@
		</description>
		<description kind="short">@linux.vlc.intaller.description.short@
		</description>
		<icon href="@linux.vlc.intaller.icon@" />
		<icon kind="splash" href="@linux.vlc.intaller.icon.splash@" />
		<offline-allowed />
		<related-content href="@vlc.home.url@">
			<title>@vlc.home.title@</title>
			<description>@vlc.home.description@</description>
			<icon href="@vlc.home.icon@" />
		</related-content>
	</information>
	<information locale="en">
		<title>@linux.vlc.intaller.title.en@</title>
		<vendor>@linux.vlc.intaller.vendor@</vendor>
		<homepage href="@linux.vlc.intaller.homepage.en@" />
		<description>@linux.vlc.intaller.description.en@</description>
		<description kind="one-line">@linux.vlc.intaller.description.oneline.en@
		</description>
		<description kind="tooltip">@linux.vlc.intaller.description.tooltip.en@
		</description>
		<description kind="short">@linux.vlc.intaller.description.short.en@
		</description>
		<related-content href="@vlc.home.url.en@">
			<title>@vlc.home.title.en@</title>
			<description>@vlc.home.description.en@</description>
			<icon href="@vlc.home.icon@" />
		</related-content>
	</information>
	<security>
		<all-permissions />
	</security>
	<update check="always" policy="always" />
	<resources>
		<j2se version="1.6+" />
		<jar download="eager" href="ReCClient_sig.jar" main="true" />
		<jar download="eager" href="ReCCommon_sig.jar" />
		<!-- Jnlp pack enabled -->
		<property name="vlc.plugins.destdir" value=".@vlc.plugins.destdir@" />
		<property name="vlc.plugins.filename" value="@vlc.plugins.filename@" />
	</resources>

	<!-- hopefully funciona para todas as archs e windows -->
	<resources arch="i386" os="Linux">
		<jar download="lazy" href="lib/vlcplugins_linux_i386_sig.jar" />
	</resources>

	<resources arch="i586" os="Linux">
		<jar download="lazy" href="lib/vlcplugins_linux_i686_sig.jar" />
	</resources>

	<resources arch="i686" os="Linux">
		<jar download="lazy" href="lib/vlcplugins_linux_i686_sig.jar" />
	</resources>

	<resources arch="amd64" os="Linux">
		<jar download="lazy" href="lib/vlcplugins_linux_amd64_sig.jar" />
	</resources>

	<installer-desc
		main-class="com.linkare.rec.impl.newface.installer.linux.LinuxInstaller" />
</jnlp>
