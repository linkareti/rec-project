<?xml version="1.0" encoding="UTF-8"?>
<jnlp spec="1.0+" codebase="@codebase@" href="ElabFullClient.jnlp">
    <information>
        <title>@title@</title>
        <vendor>@vendor@</vendor>
		<homepage href="@homepage@"/>
		<description kind="one-line">@one-line@</description>
		<description kind="tooltip">@tooltip@</description>
		<description kind="short">@short@</description>
		<icon href="images/fullclient_iconified.gif"/>
		<icon kind="splash" href="images/elab_logo.png"/>
		<offline-allowed/>
    </information>
    <security>
        <all-permissions/>
    </security>
    <update check="background" policy="always" />
    <resources>
    
		<j2se version="@j2se-version@"/>

        <!-- Jar eLab Client -->

        <!--Start Experiment Jars-->

        <!--End Experiment Jars-->
        
        <extension name="JFreeChartClient" href="JFreeChart.jnlp" />
		<extension name="OpenORBClient" href="OpenORB.jnlp" />
		<extension name="ReCFramework" href="ReCFramework.jnlp" />
		<!--<extension name="JHelp" href="jhelp.jnlp"/>-->
		
        <property name="ReCFaceConfig" value="@codebase@/etc/ReCFaceConfig.xml" />
        <property name="ReCBaseUIConfig" value="@codebase@/etc/ReCBaseUIConfig.xml" />

		<property name="ReC.MultiCastController.BindName" value="MultiCastController"/>
		<property name="ReC.MultiCastController.InitRef" value="MultiCastController"/>

		<property name="org.omg.CORBA.ORBClass" value="org.openorb.orb.core.ORB"/>
		<property name="org.omg.CORBA.ORBSingletonClass" value="org.openorb.orb.core.ORBSingleton"/>
		<property name="com.sun.CORBA.ORBDynamicStubFactoryFactoryClass" value="com.sun.corba.se.impl.presentation.rmi.StubFactoryFactoryStaticImpl" />
		<property name="openorb.config" value="@codebase@/etc/openorb.xml"/>
  		<property name="openorb.profile" value="ReCClient"/>

        <!-- change this value to disable video -->
        <property name="video.enabled" value="@video.enabled@"/>
        <property name="vlc.plugins.filename" value="@vlc.plugins.filename@"/>
        
    </resources>
    
    <resources os="Linux">
        <property name="vlc.plugins.destdir" value=".@vlc.plugins.destdir@"/>
	</resources>
    
    <resources os="Windows">
        <property name="vlc.plugins.destdir" value="@vlc.plugins.destdir@"/>
	</resources>
    
    <application-desc main-class="@client.main-class@" />
    
</jnlp>
