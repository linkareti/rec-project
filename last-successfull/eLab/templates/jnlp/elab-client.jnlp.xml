<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jnlp PUBLIC "-//Sun Microsystems, Inc//DTD JNLP Descriptor 6.0//EN" "http://java.sun.com/dtd/JNLP-6.0.dtd">
<jnlp spec="6.0+" codebase="@codebase@" href="elab-client.jnlp">
	<information>
		<title>@elab.title@</title>
		<vendor>@elab.vendor@</vendor>
		<homepage href="@elab.homepage@" />
		<description>@elab.description@</description>
		<description kind="one-line">@elab.description.oneline@</description>
		<description kind="tooltip">@elab.description.tooltip@</description>
		<description kind="short">@elab.description.short@</description>
		<icon href="@elab.icon@" />
		<icon kind="splash" href="@elab.icon.splash@" />
		<offline-allowed />
		<shortcut online="true">
			<desktop />
			<menu submenu="@elab.title@" />
		</shortcut>
		<association extensions="elab" mime-type="application/elab" />
	</information>
	<information locale="en">
		<title>@elab.title.en@</title>
		<homepage href="@elab.homepage.en@" />
		<description>@elab.description.en@</description>
		<description kind="one-line">@elab.description.oneline.en@
		</description>
		<description kind="tooltip">@elab.description.tooltip.en@
		</description>
		<description kind="short">@elab.description.short.en@
		</description>
	</information>
	<security>
		<all-permissions />
	</security>
	<update check="always" policy="always" />
	<resources>

		<j2se version="@j2se-version@" />

		<!-- Jar eLab Client -->

		<!--Start Experiment Jars-->

		<!--End Experiment Jars-->

		<extension name="JFreeChartClient" href="jfreechart.jnlp" />
		<extension name="OpenORBClient" href="openorb.jnlp" />
		<extension name="ReCFramework" href="rec-framework.jnlp" />
		<!--<extension name="JHelp" href="jhelp.jnlp"/>-->

		<property name="ReCFaceConfig" value="@codebase@/etc/ReCFaceConfig.xml" />
		<property name="ReCBaseUIConfig" value="@codebase@/etc/ReCBaseUIConfig.xml" />

		<property name="ReC.MultiCastController.BindName" value="MultiCastController" />

		<property name="org.omg.CORBA.ORBClass" value="org.openorb.orb.core.ORB" />
		<property name="org.omg.CORBA.ORBSingletonClass" value="org.openorb.orb.core.ORBSingleton" />
		<property name="com.sun.CORBA.ORBDynamicStubFactoryFactoryClass"
			value="com.sun.corba.se.impl.presentation.rmi.StubFactoryFactoryStaticImpl" />
		<property name="openorb.config" value="@codebase@/etc/openorb.xml" />
		<property name="openorb.profile" value="ReCClient" />

		<!-- change this value to disable video -->
		<property name="video.enabled" value="@video.enabled@" />
		<property name="vlc.plugins.filename" value="@vlc.plugins.filename@" />

	</resources>

	<resources os="Linux">
		<property name="vlc.plugins.destdir" value=".@vlc.plugins.destdir@" />
	</resources>

	<resources os="Windows">
		<property name="vlc.plugins.destdir" value="@vlc.plugins.destdir@" />
	</resources>

	<application-desc main-class="@client.main-class@" />

</jnlp>
