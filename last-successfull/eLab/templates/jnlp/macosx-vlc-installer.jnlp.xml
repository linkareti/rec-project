<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jnlp PUBLIC "-//Sun Microsystems, Inc//DTD JNLP Descriptor 6.0//EN" "http://java.sun.com/dtd/JNLP-6.0.dtd">
<jnlp codebase="@codebase@" href="macosx-vlc-installer.jnlp" spec="6.0+">
	<information>
		<title>@mac.vlc.intaller.title@</title>
		<vendor>@mac.vlc.intaller.vendor@</vendor>
		<homepage href="@mac.intaller.homepage@" />
		<description>@mac.vlc.intaller.description@</description>
		<description kind="one-line">@mac.vlc.intaller.description.oneline@
		</description>
		<description kind="tooltip">@mac.vlc.intaller.description.tooltip@
		</description>
		<description kind="short">@mac.vlc.intaller.description.short@
		</description>
		<icon href="@mac.vlc.intaller.icon@" />
		<icon kind="splash" href="@mac.vlc.intaller.icon.splash@" />
		<offline-allowed />
		<related-content href="@vlc.home.url@">
			<title>@vlc.home.title@</title>
			<description>@vlc.home.description@</description>
			<icon href="@vlc.home.icon@" />
		</related-content>
	</information>
	<information locale="en">
		<title>@mac.vlc.intaller.title.en@</title>
		<vendor>@mac.vlc.intaller.vendor@</vendor>
		<homepage href="@mac.vlc.intaller.homepage.en@" />
		<description>@mac.vlc.intaller.description.en@</description>
		<description kind="one-line">@mac.vlc.intaller.description.oneline.en@
		</description>
		<description kind="tooltip">@mac.vlc.intaller.description.tooltip.en@
		</description>
		<description kind="short">@mac.vlc.intaller.description.short.en@
		</description>
		<related-content href="@vlc.home.url.en@">
			<title>@vlc.home.title.en@</title>
			<description>@vlc.home.description.en@</description>
			<icon href="@vlc.home.icon@" />
		</related-content>
	</information>
	<security>
		<all-permissions />
	</security>
	<update check="always" policy="always" />
	<resources>
		<j2se version="1.6+" />
		<jar download="eager" href="ReCClient_sig.jar" main="true" />
		<jar download="eager" href="ReCCommon_sig.jar" />
		<!--property name="jnlp.packEnabled" value="true" /-->
		<property name="vlc.plugins.destdir" value=".@vlc.plugins.destdir@" />
		<property name="vlc.plugins.filename" value="@vlc.plugins.filename@" />
                <property name="jnlp.packEnabled" value="true" />
	</resources>

	<!-- <resources arch="ppc" os="Mac OS X"> <jar href="lib/vlcplugins_mac_ppc.jar"/> 
		</resources> <resources arch="ppc64" os="Mac OS X"> <jar href="lib/vlcplugins_mac_ppc64.jar"/> 
		</resources> <resources arch="x86" os="Mac OS X"> <jar href="lib/vlcplugins_mac_ppc64.jar"/> 
		</resources> <resources arch="x86_64" os="Mac OS X"> <jar href="lib/vlcplugins_mac_ppc64.jar"/> 
		</resources> -->

	<installer-desc
		main-class="com.linkare.rec.impl.newface.installer.mac.MacInstaller" />
</jnlp>
