<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE jnlp PUBLIC "-//Sun Microsystems, Inc//DTD JNLP Descriptor 6.0//EN" "http://java.sun.com/dtd/JNLP-6.0.dtd">
<jnlp spec="6.0+" codebase="@codebase@" href="j3d.jnlp">
	<information>
		<title>@j3d.title@</title>
		<vendor>@j3d.vendor@</vendor>
		<homepage href="@j3d.homepage@" />
		<description>@j3d.description@</description>
		<description kind="one-line">@j3d.description.oneline@
		</description>
		<description kind="tooltip">@j3d.description.tooltip@
		</description>
		<description kind="short">@j3d.description.short@
		</description>
		<icon href="@j3d.icon@" />
		<icon kind="splash" href="@j3d.icon.splash@" />
		<offline-allowed />
		<related-content href="@j3d.home.url@">
			<title>@j3d.home.title@</title>
			<description>@j3d.home.description@</description>
			<icon href="@j3d.home.icon@" />
		</related-content>
	</information>
	<information locale="en">
		<title>@j3d.title.en@</title>
		<vendor>@j3d.vendor.en@</vendor>
		<homepage href="@j3d.homepage.en@" />
		<description>@j3d.description.en@</description>
		<description kind="one-line">@j3d.description.oneline.en@
		</description>
		<description kind="tooltip">@j3d.description.tooltip.en@
		</description>
		<description kind="short">@j3d.description.short.en@
		</description>
		<related-content href="@j3d.home.url.en@">
			<title>@j3d.home.title.en@</title>
			<description>@j3d.home.description.en@</description>
			<icon href="@j3d.home.icon.en@" />
		</related-content>
	</information>
	<security>
		<all-permissions />
	</security>
	<update check="always" policy="always" />
	<resources>
		<jar href="lib/j3dcore_sig.jar" download="lazy" part="java3d" />
		<jar href="lib/j3dutils_sig.jar" download="lazy" part="java3d" />
		<jar href="lib/vecmath_sig.jar" download="lazy" part="java3d" />
	</resources>

	<!-- ******************************************************************* 
		****************** Resources por SO / Arch ************************ ******************************************************************* -->

	<!-- Check http://lopica.sourceforge.net/os.html for the os/arch matrix -->

	<!-- Windows -->
	<resources arch="x86" os="Windows">
		<nativelib href="lib/j3d-native-windows-i586_sig.jar" />
	</resources>
	<resources arch="amd" os="Windows">
		<nativelib href="lib/j3d-native-windows-i586_sig.jar" />
	</resources>
	<!-- 64bit -->
	<resources arch="amd64" os="Windows">
		<nativelib href="lib/j3d-native-windows-amd64_sig.jar" />
	</resources>
	<resources arch="x86_64" os="Windows">
		<nativelib href="lib/j3d-native-windows-amd64_sig.jar" />
	</resources>
	<!-- /Windows -->

	<!-- Linux -->
	<resources arch="i386" os="Linux">
		<nativelib href="lib/j3d-native-linux-i586_sig.jar" />
	</resources>
	<resources arch="x86" os="Linux">
		<nativelib href="lib/j3d-native-linux-i586_sig.jar" />
	</resources>
	<resources arch="i686" os="Linux">
		<nativelib href="lib/j3d-native-linux-i586_sig.jar" />
	</resources>
	<!-- 64bit -->
	<resources arch="amd64" os="Linux">
		<nativelib href="lib/j3d-native-linux-amd64_sig.jar" />
	</resources>
	<resources arch="x86_64" os="Linux">
		<nativelib href="lib/j3d-native-linux-amd64_sig.jar" />
	</resources>
	<!-- /Linux -->

	<!-- Solaris -->
	<resources arch="i386" os="Solaris">
		<nativelib href="lib/j3d-native-solaris-i386_sig.jar" />
	</resources>
	<resources arch="i586" os="Solaris">
		<nativelib href="lib/j3d-native-solaris-i386_sig.jar" />
	</resources>
	<resources arch="i686" os="Solaris">
		<nativelib href="lib/j3d-native-solaris-i386_sig.jar" />
	</resources>
	<!-- 64bit -->
	<resources arch="x86_64" os="Solaris">
		<nativelib href="lib/j3d-native-solaris-amd64_sig.jar" />
	</resources>
	<resources arch="amd64" os="Solaris">
		<nativelib href="lib/j3d-native-solaris-amd64_sig.jar" />
	</resources>
	<!-- sparc -->
	<resources arch="sparc" os="Solaris">
		<nativelib href="lib/j3d-native-solaris-sparc_sig.jar" />
	</resources>
	<!-- sparc 64bit -->
	<resources arch="sparcv9" os="Solaris">
		<nativelib href="lib/j3d-native-solaris-sparcv9_sig.jar" />
	</resources>
	<!-- /Solaris -->
	<!-- MacOS X does not have native lib components on java3d -->

	<component-desc />
</jnlp>
