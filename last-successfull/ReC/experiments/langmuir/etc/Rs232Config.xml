<?xml version="1.0" encoding="iso-8859-1" ?>
<hardware id="ELAB_LANGMUIR_PROBE_DSPIC_V0.1" num_channels="3"
	minfrequency="10Hz" maxfrequency="1000Hz">
	<rs232 baud="115200" stopbits="1" paritybits="0" numbits="8"
		ports_restrict="/dev/ttyUSB0">
		<parameters>
			<!-- protocolo -->
			<!--parameter output="0" input="0" maxvalue="5" minvalue="1" order="0">
			Aqui fica este parametro caso algum dia se queiram adicionar mais protocolos			
			</parameter-->


			<!-- max_duty -->
			<parameter output="##0" input="##0.0" maxvalue="500"
				minvalue="0" order="1">
			</parameter>
			<!-- t_sinal -->
			<parameter output="###0" input="##0.0" maxvalue="1100"
				minvalue="1" order="2">
			</parameter>
			<!-- n_samp -->
			<parameter output="##0" input="##0.0" maxvalue="100"
				minvalue="0" order="3">
			</parameter>
			<!-- n_period -->
			<parameter output="##0" input="##0.0" maxvalue="30" minvalue="1"
				order="4">
			</parameter>
			<!-- setpoint_press -->
			<parameter output="###0" input="##0.0" maxvalue="1000" minvalue="0"
				order="5">
			</parameter>

			<!-- gas_sel -->
			<!--parameter output="#0.0" input="#0.0" maxvalue="3"
				minvalue="1" order="6">
			</parameter>
			-->
		</parameters>
		<channels>
			<!-- adc_value1 -->
			<channel format="#" order="0">
			</channel>
			<!-- adc_value2 -->
			<channel format="#" order="1">
			</channel>
			<!-- adc_value3 -->
			<channel format="#" order="2">
			</channel>
		</channels>
		<timeout>
			<default_timeout time="45000" />
			<id time="10000" />
			<cfg time="80000" />
			<cur time="5000" />
			<str time="5000" />
			<dat_bin time="120000" />
			<no_data time="60000" />
			<end time="230000" />
			<stp time="180000" />
			<rst time="180000" />
			<hardware_died time="3600000" />
			<listen_to_port time="10000" />
		</timeout>
		<errors>
			<error code="0" key="OPS" message="Something wrong happened !" />
			<error code="1" key="SENSOR" message="Sensor has failed." />
			<error code="2" key="OUT" message="Value out of range..." />
		</errors>
	</rs232>
</hardware>
