<?xml version="1.0" encoding="iso-8859-1" ?>
<hardware id="ELAB_PLANCK_DSPIC_V2.0" num_channels="3"
	minfrequency="10Hz" maxfrequency="1000Hz">
	<rs232 baud="115200" stopbits="1" paritybits="0" numbits="8"
		ports_restrict="/dev/ttyS0">
		<parameters>
			<!-- cor -->
			<parameter output="0" input="0" maxvalue="5" minvalue="1"
				order="0">
			</parameter>
			<!-- intensidade -->
			<parameter output="##0" input="##0" maxvalue="100"
				minvalue="0" order="1">
			</parameter>
			<!-- tempo entre amostras -->
			<parameter output="##0" input="##0" maxvalue="900"
				minvalue="6" order="2">
			</parameter>
			<!-- numero de amostras -->
			<parameter output="##0" input="##0" maxvalue="250"
				minvalue="1" order="3">
			</parameter>
		</parameters>
		<channels>
			<!-- tensao -->
			<channel format="#000" order="0">
				<transfer_function>
					<linear>
						<param weight="0.001" center="0"/>
					</linear>
				</transfer_function>
			</channel>
			<!-- tempo -->
			<channel format="#000" order="1">
				<transfer_function>
					<linear>
						<param weight="0.001" center="0"/>
					</linear>
				</transfer_function>
			</channel>
		</channels>
		<timeout>
			<default_timeout time="45000" />
			<id time="10000" />
			<cfg time="80000" />
			<cur time="5000" />
			<str time="30000" />
			<dat_bin time="120000" />
			<no_data time="60000" />
			<end time="230000" />
			<stp time="180000" />
			<rst time="180000" />
			<hardware_died time="3600000" />
			<listen_to_port time="10000" />
		</timeout>
		<errors>
			<error code="0" key="OPS" message="Something wrong happened !" />
			<error code="1" key="SENSOR" message="Sensor has failed." />
			<error code="2" key="OUT" message="Value out of range..." />
		</errors>
	</rs232>
</hardware>
