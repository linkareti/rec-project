<?xml version="1.0" encoding="iso-8859-1" ?>
<hardware id="ELAB_OPTICA_DSPIC_V1.0" num_channels="2" minfrequency="10Hz" maxfrequency="1000Hz">
  <rs232 baud="115200" stopbits="1" paritybits="0" numbits="8" ports_restrict="/dev/ttyS0,/dev/ttyS1">
	<parameters>
	    <!-- protocolo -->
	    <parameter output="#" input="#" maxvalue="5" minvalue="1" order="0">
	    </parameter>
	    <!-- ang1_min -->
	    <parameter output="###.#" input="###.#" maxvalue="359.8" minvalue="0" order="1">
	    </parameter>
	    <!-- ang1_max -->
	    <parameter output="###.#" input="###.#" maxvalue="360" minvalue="0" order="2">
	    </parameter>
	    <!-- delta_ang1 -->
	    <parameter output="###.#" input="###.#" maxvalue="360" minvalue="0.2" order="3">
	    </parameter>
	    <!-- delay -->
	    <parameter output="#.#" input="#.#" maxvalue="5" minvalue="0" order="4">
	    </parameter>
	    <!-- polarizacao -->
	    <parameter output="#" input="#" maxvalue="1" minvalue="0" order="5">
	    </parameter>
	    <!-- ang_pol -->
	    <parameter output="##.#" input="##.#" maxvalue="90" minvalue="0" order="6">
	    </parameter>
	    <!-- check_box -->
	    <parameter output="#" input="#" maxvalue="7" minvalue="0" order="7">
	    </parameter>
	</parameters>
	<channels>
	    <!-- ang1 -->
	    <channel format="###.#" order="0">
	    </channel>
	    <!-- ang2 -->
	    <channel format="###.#" order="1">
	    </channel>
	    <!-- adc_value -->
	    <channel format="####" order="2">
	    </channel>
	</channels>
	<timeout>
	    <default_timeout time="45" />
	    <id time="10" />
	    <cfg time="5" />
	    <cur time="5" />
	    <str time="45" />
	    <dat_bin time="12" />
	    <dat_no_data time="120" />
	    <bin_no_data time="120" />
	    <stp time="20" />
	    <rst time="20" />
	    <hardware_died time="3600" />
	    <listen_to_port time="10000" />
	</timeout>
	<errors>
	    <error code="0" key="OPS" message="Something wrong happened !" />
	    <error code="1" key="SENSOR" message="Sensor has failed." />
	    <error code="2" key="OUT" message="Value out of range..." />
	</errors>
  </rs232>
</hardware>
