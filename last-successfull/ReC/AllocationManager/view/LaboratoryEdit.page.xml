<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/LaboratoryList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{laboratoryHome.wire}"/>

   <param name="laboratoryFrom"/>
   <param name="laboratoryId" value="#{laboratoryHome.laboratoryId}"/>


   <navigation from-action="#{laboratoryHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Laboratory.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{laboratoryHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Laboratory.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{laboratoryHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/LaboratoryList.xhtml"/>
      </rule>
   </navigation>

</page>
