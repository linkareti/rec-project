<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/ExperimentList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{experimentHome.wire}"/>

   <param name="experimentFrom"/>
   <param name="experimentId" value="#{experimentHome.experimentId}"/>
   <param name="laboratoryFrom"/>
   <param name="laboratoryId" value="#{laboratoryHome.laboratoryId}"/>



   <navigation from-action="#{experimentHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Experiment.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{experimentHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Experiment.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{experimentHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/ExperimentList.xhtml"/>
      </rule>
   </navigation>

</page>
