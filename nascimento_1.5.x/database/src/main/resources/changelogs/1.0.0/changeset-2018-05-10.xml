	<changeSet author="sbogas" id="2018-05-10-update-configuration-entry">
		<sql>
			<![CDATA[
UPDATE
	nascimento.configuration
SET
	ws_send_email_endpoint = 'https://localhost:2028/wsMCEnvioEmail',
	ws_send_email_username = 'username',
	ws_send_email_password = 'password',
	ws_send_email_application_code = 'NASC_ONLINE',
