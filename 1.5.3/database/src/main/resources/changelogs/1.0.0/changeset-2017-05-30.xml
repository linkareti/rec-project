<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

	<changeSet author="pzenida"
		id="2017-05-30-add-file-related-columns-to-birth-registration-1">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="birth_registration"
					columnName="filename" />
			</not>
		</preConditions>
		<addColumn tableName="birth_registration">
			<column name="filename" type="varchar(150)" />
		</addColumn>
	</changeSet>
	<changeSet author="pzenida"
		id="2017-05-30-add-file-related-columns-to-birth-registration-2">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="birth_registration"
					columnName="file_content_type" />
			</not>
		</preConditions>
		<addColumn tableName="birth_registration">
			<column name="file_content_type" type="varchar(75)" />
		</addColumn>
	</changeSet>
	<changeSet author="pzenida"
		id="2017-05-30-add-file-related-columns-to-birth-registration-3">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="birth_registration"
					columnName="file_size" />
			</not>
		</preConditions>
		<addColumn tableName="birth_registration">
			<column name="file_size" type="bigint(20)" />
		</addColumn>
	</changeSet>
	<changeSet author="pzenida"
		id="2017-05-30-add-file-related-columns-to-birth-registration-4">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="birth_registration"
					columnName="file_content" />
			</not>
		</preConditions>
		<addColumn tableName="birth_registration">
			<column name="file_content" type="mediumblob" />
		</addColumn>
	</changeSet>

</databaseChangeLog>