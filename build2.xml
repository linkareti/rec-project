	<property name="rec.common.src.java.dir" value="rec/src/java/common" />

	<property name="rec.lib.dir" value="rec/lib" />
	
	<path id="rec.common.lib.path">
		<fileset dir="${rec.lib.dir}/java/common/">
			<include name="**/*.jar"/>
		</fileset>
	</path>
	
	<path id="rec.common.compile.lib.path">
		<fileset dir="${rec.lib.dir}/compile/common/">
			<include name="**/*.jar"/>
		</fileset>
	</path>

	<path id="rec.compile.common.classpath">
		<path refid="rec.common.lib.path" />
		<path refid="rec.common.compile.lib.path" />
	</path>

	<target name="clean.rec.common" description="Delete the build folder containing the common shared compiled code.">
		<delete dir="${rec.common.classes.dir}" />
	</target>

	<target name="compile.rec.common" description="Compile the common part of the ReC project independently.">
		<mkdir dir="${rec.common.classes.dir}" />
		<javac srcdir="${rec.common.src.java.dir}" destdir="${rec.common.classes.dir}" encoding="${javac.encoding}" debug="${javac.debug}" optimize="${javac.optimize}" source="${javac.sourcelevel}" target="${javac.sourcelevel}" deprecation="yes">
			<include name="**/*.java" />
			<classpath refid="rec.compile.common.classpath" />
			<compilerarg value="-Xlint:unchecked, cast, -serial" />
		</javac>
	</target>

	<target name="jar.rec.common" description="Create a jar with the common part of the ReC project.">
		<mkdir dir="${rec.common.build.dir}" />
		<jar destfile="${rec.common.build.dir}/ReCCommon.jar" basedir="${rec.common.classes.dir}">
			<include name="**/*.class" />
		</jar>
	</target>

	<target name="sign.rec.common">
		<signjar destDir="${rec.common.build.dir}" keystore="${keystore}" keypass="${keypass}" storepass="${storepass}" alias="${alias}">
			<fileset dir="${rec.common.build.dir}" includes="ReCCommon.jar" excludes="*_sig.jar" />
			<globmapper from="*.jar" to="*_sig.jar" />
		</signjar>
	</target>

	<target name="build.rec.common" depends="clean.rec.common,compile.rec.common,jar.rec.common,sign.rec.common">

