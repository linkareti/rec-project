<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet id="2021-04-06-INSERT_ADMIN_ROLE_IN_PRINCIPAL" author="jcortes">
		<comment>Add admin role to principal table</comment>
		<insert tableName="PRINCIPAL">
			<column name="INSTANCE_TYPE" value="Role"/>
			<column name="ID" value="1"/>
			<column name="VERSION" value="1"/>
			<column name="NAME" value="ADMIN"/>
		</insert>
	</changeSet>
	<changeSet id="2021-04-06-INSERT_ADMIN_USER_IN_PRINCIPAL" author="jcortes">
		<comment>Add admin user to principal table</comment>
		<insert tableName="PRINCIPAL">
			<column name="INSTANCE_TYPE" value="User"/>
			<column name="ID" value="2"/>
			<column name="VERSION" value="1"/>
			<column name="USERNAME" value="admin"/>
		</insert>
	</changeSet>
	<changeSet id="2021-04-06-INSERT_ADMIN_USER_ASSOCIATION" author="jcortes">
		<comment>Associate admin user to admin role</comment>
		<insert tableName="PRINCIPALS_ASSOCIATION">
			<column name="KEY_PARENT" value="1"/>
			<column name="KEY_CHILD" value="2"/>
		</insert>
	</changeSet>
	<changeSet id="2021-04-06-INSERT_ADMIN_USER_IDENTIFICATION" author="jcortes">
		<comment>Add admin user identification</comment>
		<insert tableName="IDENTIFICATION">
			<column name="INSTANCE_TYPE" value="Login"/>
			<column name="ID" value="1"/>
			<column name="VERSION" value="1"/>
			<column name="PASSWORD" value="698dc19d489c4e4db73e28a713eab07b"/>
			<column name="KEY_USER" value="2"/>
		</insert>
	</changeSet>
	<changeSet id="2021-04-06-INSERT_LOGIN_DOMAIN" author="jcortes">
		<comment>Add admin user identification</comment>
		<insert tableName="LOGIN_DOMAIN">
			<column name="ID" value="1"/>
			<column name="VERSION" value="1"/>
			<column name="NAME" value="Internal"/>
		</insert>
	</changeSet>
	<changeSet id="2021-04-06-ADD_COLUMN_LONGITUDE_IN_LABORATORY" author="jcortes">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="LABORATORY"
							  columnName="LONGITUDE" />
			</not>
		</preConditions>

		<addColumn tableName="LABORATORY">
			<column name="LONGITUDE" type="DOUBLE"/>
		</addColumn>
	</changeSet>
	<changeSet id="2021-04-06-ADD_COLUMN_LATITUDE_IN_LABORATORY" author="jcortes">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="LABORATORY"
							  columnName="LATITUDE" />
			</not>
		</preConditions>

		<addColumn tableName="LABORATORY">
			<column name="LATITUDE" type="DOUBLE"/>
		</addColumn>
	</changeSet>
	<changeSet id="2021-04-06-ADD_COLUMN_REC_FACE_CONFIG_URL_IN_LABORATORY" author="jcortes">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="LABORATORY"
							  columnName="REC_FACE_CONFIG_URL" />
			</not>
		</preConditions>

		<addColumn tableName="LABORATORY">
			<column name="REC_FACE_CONFIG_URL" type="VARCHAR(255)"/>
		</addColumn>
	</changeSet>
	<changeSet id="2021-04-06-ADD_COLUMN_IMAGE_IN_LABORATORY" author="jcortes">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="LABORATORY"
							  columnName="IMAGE" />
			</not>
		</preConditions>

		<addColumn tableName="LABORATORY">
			<column name="IMAGE" type="MEDIUMBLOB"/>
		</addColumn>
	</changeSet>
	<changeSet id="2021-04-06-DROP_UNIQUE_CONSTRAINT_IN_EXPERIMENT" author="jcortes">
		<dropUniqueConstraint constraintName="EXTERNAL_ID"
							  schemaName="rec"
							  tableName="EXPERIMENT"
							  uniqueColumns="EXTERNAL_ID"/>
	</changeSet>
	<changeSet id="2021-04-06-ADD_UNIQUE_CONSTRAINT_IN_EXPERIMENT" author="jcortes">
		<addUniqueConstraint  columnNames="EXTERNAL_ID, KEY_LABORATORY"
							  constraintName="EXTERNAL_ID_LABORATORY_UN"
							  schemaName="rec"
							  tableName="EXPERIMENT"/>
	</changeSet>
</databaseChangeLog>
