<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>multicast</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}/build/java/jars/multicast/</directory>
            <outputDirectory>basic/multicast</outputDirectory>
            <includes>
                <include>ELabMulticastController.jar</include>
                <include>ReCCommon.jar</include>
                <include>ReCMulticastController.jar</include>
                <include>lib/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/build/java/jars/multicast/basic</directory>
            <outputDirectory>basic/multicast</outputDirectory>
            <includes>
                <include>etc/**</include>
            </includes>
            <excludes>
                <exclude>etc/jmxremote.password</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/build/java/jars/multicast/basic</directory>
            <outputDirectory>basic/multicast</outputDirectory>
            <includes>
                <include>etc/jmxremote.password</include>
            </includes>
            <fileMode>0600</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/build/java/jars/multicast/basic</directory>
            <outputDirectory>basic</outputDirectory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
