<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>client</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}/build/java/jars/client</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>*_sig.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/build/java/jars/client/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*_sig.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/build/java/jars/client/etc</directory>
            <outputDirectory>etc</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/build/java/jars/client/images</directory>
            <outputDirectory>images</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/build/java</directory>
            <outputDirectory>webswing</outputDirectory>
            <includes>
                <include>webswing.config</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>